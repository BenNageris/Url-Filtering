  body
    .container
      .row
        .panel.panel-default.user_panel
          .panel-heading
            h3.panel-title #{Parent}'s childs
          .panel-body
            .table-container
              table.table-users.table(border='0')
                tbody
                each child in Children
                  tr(id=''+child.name)
